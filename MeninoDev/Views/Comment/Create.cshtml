@model MeninoDev.Entidades.Comment

@{
    ViewData["Title"] = "Novo";
}

<h4>Post</h4>
<hr />

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Create", "Comment", FormMethod.Post))
        {
            @Html.HiddenFor(model => model.PostId)

            <div class="form-group">
                @Html.DisplayNameFor(model => model.Content)
                @Html.TextAreaFor(model => model.Content, new { @cols = 150, @rows = 3 })
                @Html.ValidationMessageFor(model => model.Content)
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        }
    </div>
</div>

<div>
    @Html.ActionLink("Voltar", "Read", "Post", new { Id = @Model.PostId }, new { @class = "btn btn-primary btn-large" })
</div>