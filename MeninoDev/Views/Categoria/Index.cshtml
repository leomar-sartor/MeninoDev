@using MeninoDev.Contexto
@using Microsoft.AspNetCore.Identity

@using X.PagedList.Mvc;
@using X.PagedList.Mvc.Core
@using X.PagedList.Mvc.Core.Common
@model X.PagedList.PagedList<MeninoDev.Entidades.Categoria>

@{
    ViewData["Title"] = "Categorias";
}

@using (Html.BeginForm("Form", "Categoria", FormMethod.Get))
{
    <div class="row">
        <div class="col">
            <a class="btn btn-sm btn-outline-primary" href="javascript:history.go(-1)">Voltar</a>
        </div>
        <div class="col text-center align-middle pt-2">
            <h6>Categorias</h6>
        </div>
        <div class="col text-end">
            <input type="submit" value="Novo" class="btn btn-sm btn-outline-success" />
        </div>
    </div>
}

<div class="text-warnig">
    <hr>
</div>

@using (Html.BeginForm("Index", "Categoria", FormMethod.Get))
{
    <div class="container">
        <div class="table-responsive">

            <table class="table table-striped table-hover align-middle mt-3">
                <thead>
                    <tr>
                        <th class="text-center col-2" style="min-width: 100px;">#</th>
                        <th class="col-10 ps-4">Nome</th>
                    </tr>
                </thead>

                <tbody class="table-group-divider">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center col-2">
                                <a
                           asp-action="Form"
                           asp-route-id="@item.Id"
                           class="btn btn-sm btn-outline-success"
                           role="button">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>

                                 <a
                           asp-action="Delete"
                           asp-route-id="@item.Id"
                           class="btn btn-sm btn-outline-danger"
                           role="button">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </td>
                            <td class="col-10 ps-4">@item.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

<div class="text-center mb-2">
    <p>Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount</p>
</div>


<nav aria-label="Page navigation example">
    @Html.PagedListPager(
    Model,
    page => Url.Action("Index", new { pageNumber = page, searchString = @ViewBag.SearchString?? "" }),
    new PagedListRenderOptions
    {
    LiElementClasses = new string[] { "page-item" },
    UlElementClasses = new string[] {"pagination justify-content-center"},
    PageClasses = new string [] { "page-link" },
    }
    )
</nav>