@model MeninoDev.Models.Perfil.PerfilViewModel

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_NiceAdminTemplate.cshtml";
}

<div class="pagetitle">
    <h1>Perfil</h1>

</div><!-- End Page Title -->

<section class="section profile">
    <div class="row">


        <div class="col-xl-12">

            <div class="card">
                <div class="card-body pt-3">
                    <!-- Bordered Tabs -->
                    <ul class="nav nav-tabs nav-tabs-bordered">

                        <li class="nav-item">
                            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-edit">Editar Perfil</button>
                        </li>

                        <li class="nav-item">
                            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-change-password">Trocar Senha</button>
                        </li>

                    </ul>
                    <div class="tab-content pt-2">

                        <div class="tab-pane fade show active profile-edit pt-3" id="profile-edit">

                            <!-- Profile Edit Form -->
                            <form asp-controller="Perfil" asp-action="Cadastro" method="post">
                                <div class="row mb-3">
                                    <label for="profileImage" class="col-md-4 col-lg-3 col-form-label">Foto de Perfil</label>
                                    <div class="col-md-8 col-lg-9">
                                        @*<img src="https://avatars.githubusercontent.com/u/6878177?v=4" alt="Profile">*@
                                        @if (String.IsNullOrEmpty(Model.Cadastro.UrlFoto))
                                        {
                                            <img src="~/Documentos/profiledefault.jpg" alt="Profile">
                                        }
                                        else
                                        {
                                            <img src="~/Documentos/@Model.Cadastro.UrlFoto" alt="Profile">
                                        }

                                        <div class="pt-2 ms-4">
                                            <a class="btn btn-primary btn-sm" asp-controller="Perfil" asp-action="Foto" title="Salvar imagem de perfil">
                                                <i class="bi bi-upload"></i>
                                            </a>
                                            <a class="btn btn-danger btn-sm" asp-controller="Perfil" asp-action="FotoRemove" title="Remover imagem de perfil">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Usuário</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="Apelido" type="text" asp-for="Cadastro.Apelido" class="form-control" id="fullName" />
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="Email" class="col-md-4 col-lg-3 col-form-label">E-mail</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="Email" type="text" asp-for="Cadastro.Email" class="form-control" id="Email" disabled/>
                                    </div>
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary">Salvar</button>
                                </div>
                            </form><!-- End Profile Edit Form -->

                        </div>



                        <div class="tab-pane fade pt-3" id="profile-change-password">
                            <!-- Change Password Form -->
                            <form asp-controller="Perfil" asp-action="TrocarSenha" method="post">

                                <div class="row mb-3">
                                    <label for="currentPassword" class="col-md-4 col-lg-3 col-form-label">Senha Atual</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="senhaAtual" type="text" asp-for="TrocaSenha.senhaAtual" class="form-control" id="currentPassword" />
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="newPassword" class="col-md-4 col-lg-3 col-form-label">Nova Senha</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="novaSenha" type="text" asp-for="TrocaSenha.novaSenha" class="form-control" id="newPassword" />
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="renewPassword" class="col-md-4 col-lg-3 col-form-label">Confirmação Nova Senha</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="confirmacaoNovaSenha" type="text" asp-for="TrocaSenha.confirmacaoNovaSenha" class="form-control" id="renewPassword" />
                                    </div>
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary">Trocar Senha</button>
                                </div>
                            </form><!-- End Change Password Form -->

                        </div>

                    </div><!-- End Bordered Tabs -->

                </div>
            </div>

        </div>
    </div>
</section>