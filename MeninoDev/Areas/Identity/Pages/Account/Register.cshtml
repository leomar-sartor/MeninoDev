                    <div class="d-flex justify-content-center py-4">
                        <a asp-controller="Post" asp-action="Index" class="logo d-flex align-items-center w-auto">
                            <img src="assets/img/logo.png" alt="">
                            <span class="d-none d-lg-block">Write Code</span>
                            </a>
                    </div><!-- End Logo -->

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="card mb-3">

